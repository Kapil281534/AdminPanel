<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserDetails">
    <include layout="@layout/toolbar"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:outlineSpotShadowColor="@color/black"
        android:outlineAmbientShadowColor="@color/black"
        app:cardElevation="40dp"

        android:layout_marginBottom="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:elevation="40dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#5AA1E8"
            android:orientation="vertical">

            <ImageView
                android:layout_width="83dp"
                android:layout_height="83dp"
                android:src="@drawable/img_1"
                android:layout_margin="12dp"
                android:layout_gravity="center"/>

            <!-- user_details_layout.xml -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingBottom="30dp"
                android:paddingTop="20dp">

                <TextView
                    android:id="@+id/textViewName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name: "
                    android:textColor="#f5f5f5"
                    android:textSize="20sp"
                    android:layout_marginBottom="4dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/textViewEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email: "
                    android:layout_marginBottom="10dp"
                    android:textAlignment="center"
                    android:textColor="#f5f5f5"
                    android:textSize="18sp"
                    android:layout_below="@id/textViewName"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/textViewCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="City: "
                    android:layout_marginBottom="4dp"
                    android:textColor="#f5f5f5"
                    android:textSize="14sp"
                    android:layout_below="@id/textViewEmail"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/textViewID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Customer ID: "
                    android:layout_marginBottom="4dp"
                    android:textColor="#f5f5f5"
                    android:textSize="14sp"
                    android:layout_below="@id/textViewCity"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/textViewPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Phone: "
                    android:textColor="#f5f5f5"
                    android:textSize="14sp"
                    android:layout_below="@id/textViewID"
                    android:layout_centerHorizontal="true"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/textViewPhone"
                    android:layout_alignRight="@id/textViewPhone"
                    android:layout_gravity="bottom|end"

                    android:src="@drawable/edit"
                    app:backgroundTint="@color/colorPrimary"
                    app:borderWidth="0dp"
                    app:elevation="6dp"
                    app:fabSize="normal"
                    app:pressedTranslationZ="12dp" />
            </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Purchases"
        android:textSize="20sp"
        android:layout_margin="12dp"/>
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="20dp"
        app:cardElevation="25dp"

            android:elevation="4dp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ListView
                android:layout_width="match_parent"
                android:id="@+id/purchasesListView"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addOrders"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="25dp"
            android:src="@drawable/add"

            app:borderWidth="0dp"
            app:elevation="6dp"
            app:fabSize="normal"
            app:pressedTranslationZ="12dp" />

    </androidx.cardview.widget.CardView>


</LinearLayout>